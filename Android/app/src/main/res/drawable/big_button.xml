<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/primaryAccentDark"
                android:startColor="@color/primaryAccentLight" />
            <stroke
                android:width="1dp"
                android:color="@color/secondaryDark" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="false" >
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/primaryAccentLight"
                android:startColor="@color/primaryAccentDark" />
            <stroke
                android:width="1dp"
                android:color="@color/secondaryDark" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>